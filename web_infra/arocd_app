apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: web-default
  namespace: argocd
spec:
  project: default
  source:
    repoURL: https://github.com/minkong38/0418toy.git
    targetRevision: HEAD
    path: web_default
  destination:
    server: https://kubernetes.default.svc
    namespace: aws9d
  syncPolicy:
    automated:
      selfHeal: true
      prune: true

